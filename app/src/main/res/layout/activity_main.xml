<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/gris">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/tvborde"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Ejercicio Calculadora | Piero Zavala"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/tvborde"
        />
    <EditText
        android:id="@+id/etNumero01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe un número"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/etNumero02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe un número"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado"
        android:gravity="center"
        android:hint="Escribe un número"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btSuma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suma"
        android:textStyle="bold"
        android:background="@drawable/btcolor01"/>
    <Button
        android:id="@+id/btResta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resta"
        android:textStyle="bold"
        android:backgroundTint="@color/blue"
        />
    <Button
        android:id="@+id/btMultiplicar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multiplicar"
        android:textStyle="bold"
        android:backgroundTint="@color/green"
        />
    <Button
        android:id="@+id/btDividir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dividir"
        android:textStyle="bold"
        android:backgroundTint="@color/yellow"
        />


</LinearLayout>